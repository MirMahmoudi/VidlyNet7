@{
	ViewData["Title"] = "Customers";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>
@Html.ActionLink(
	"New Customer",
	"New",
	"Customers",
	null,
	new { @class = "btn btn-primary mt-4 mb-4" })

<table id="customers" class="table table-bordered table-hover">
	<thead>
		<tr>
			<th>Customer</th>
			<th>Discount Rate</th>
			<th>Membership Type</th>
			<th>Delete</th>
		</tr>
	</thead>
	<tbody>
	</tbody>
</table>

@section Scripts
{
	<link rel="stylesheet" href="https://cdn.datatables.net/1.13.5/css/jquery.dataTables.css"/>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/bootbox.js/6.0.0/bootbox.min.js"></script>
	<script src="https://cdn.datatables.net/1.13.5/js/jquery.dataTables.js"></script>
	<script>
		$(document).ready(function () {
			const table = $("#customers").DataTable({
				ajax: {
					url: "/api/Customers",
					method: "GET",
					dataSrc: ""
				},
				columns: [
					{
						data: "name",
						render: function (data, type, customer){
							return `<a href='/Customers/Edit/${customer.id}' >${data}</a>`;
						}
					},
					{
						data: "membershipType.discountRate",
						render: function(data){return `${data}%`;}
					},
					{
						data: "membershipType.name",
						
					},
					{
						data: "id",
						render: function (data) {
							return `<button customer-id='${data}' class='btn btn-link js-delete'>Delete</button>`;
						}
						
					}
				]
			});
			
			$("#customers").on("click", ".js-delete", function () {
				const button = $(this);
				bootbox.confirm("Are you sure you want to delete this customer?", function (result) {
					if (result) {
						$.ajax({
							url: `/api/Customers/${button.attr("customer-id")}`,
							method: "delete",
							success: function () {
								table.row(button.parents("tr")).remove().draw();
							}
						});
					}
				});
			});
		});
	</script>
}

