@model VidlyNet7.Presentation.ViewModels.MovieFormViewModel

@{
	ViewData["Title"] = @Model.Title;
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Title</h2>

@using (Html.BeginForm("Save", "Movies", FormMethod.Post))
{
	<div class="mb-3" style="width: 50%">
		@Html.LabelFor(m => m.Name)
		@Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
		@Html.ValidationMessageFor(m => m.Name, null, new {@class="text-danger"})
	</div>
	<div class="mb-3" style="width: 50%">
		@Html.LabelFor(m => m.ReleaseDate)
		@Html.TextBoxFor(m => m.ReleaseDate, "{0:d MMM yyyy}", new { @class = "form-control" })
		@Html.ValidationMessageFor(m => m.ReleaseDate, null, new {@class="text-danger"})
	</div>
	<div class="mb-3" style="width: 50%">
		@Html.LabelFor(m => m.GenreId)
		@Html.DropDownListFor(m => m.GenreId,
			new SelectList(Model.Genres, "Id", "Name"),
			"Select Genre",
			new { @class = "form-control" })
		@Html.ValidationMessageFor(m => m.GenreId, null, new {@class="text-danger"})
	</div>
	<div class="mb-3" style="width: 50%">
		@Html.LabelFor(m => m.NumberInStock)
		@Html.TextBoxFor(m => m.NumberInStock, new { @class = "form-control" })
		@Html.ValidationMessageFor(m => m.NumberInStock, null, new {@class="text-danger"})
	</div>
	@Html.HiddenFor(m => m.Id)
	@Html.AntiForgeryToken()
	<button type="submit" class="btn btn-primary">Save</button>
}

@section Scripts
{
	<partial name="_ValidationScriptsPartial"/>
}

