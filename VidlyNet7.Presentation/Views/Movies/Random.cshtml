@model VidlyNet7.Presentation.ViewModels.RandomMovieViewModel

@{
	ViewData["Title"] = "Random";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@Model.Movie.Name</h1>

@if (Model.Customers is null || Model.Customers.Count == 0)
{
	<p>No one has rented this movie before.</p>
}
else
{
	<ul>
		@foreach (var customer in Model.Customers)
		{
			<li>@customer.Name</li>
		}
	</ul>
}


